extends ../layout.pug

block content
  main(class='main-page main-page--padding')
    section(class='main-page__publication publication')
      h1(class='publication__title') Комментарии
      ul(class='publication__list')
        each article in articles
          each comment in article.comments
            li(class='publication__list-item')
              div(class='publication__header')
                img(class='publication__list-image', src='/img/avatar-small-2.png', width='20', height='20', alt='Аватар пользователя')
                b(class='publication__list-name') Александр Петров
                time(class='publication__item-time', datetime=`${getFormatedDate(article.createdDate, `YYYY-MM-DDTHH:mm`)}`) #{getFormatedDate(article.createdDate, `DD.MM.YYYY, HH:mm`)}
              a(class='publication__item-text', href='#') #{comment.text}
              p(class='publication__text-strong') #{comment.text}
              button(class='publication__button button button--close-item', type='button')
                span(class='visually-hidden') Закрыть строку списка

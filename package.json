{
  "name": "typoteka-30012022",
  "version": "2.0.0",
  "description": "Описание состояний страниц проекта «Типотека».",
  "main": "./src/service/service.js",
  "scripts": {
    "editorconfig": "editorconfig-checker --exclude src/frontend/public/",
    "eslint": "eslint --ext .js,.ts src/",
    "test": "npm run editorconfig && npm run eslint",
    "dev": "tsc --watch",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "start-backend": "ts-node ./src/service/service.ts --server 3000",
    "start-backend-nodemon": "nodemon -e ts,js,json --exec npm run start-backend",
    "start-frontend": "ts-node ./src/frontend/index.ts",
    "start-frontend-nodemon": "nodemon -e ts,js,json --exec npm run start-frontend",
    "inspect": "node inspect -r ts-node/register ./src/service/service.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tyort/typoteka-template.git"
  },
  "author": "Tyo Sergey",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tyort/typoteka-template/issues"
  },
  "homepage": "https://github.com/tyort/typoteka-template#readme",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "editorconfig-checker": "^4.0.2",
    "eslint": "8.8.0",
    "eslint-config-htmlacademy": "5.0.0",
    "eslint-config-prettier": "^8.3.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "dayjs": "^1.10.7",
    "express": "^4.17.2"
  }
}
